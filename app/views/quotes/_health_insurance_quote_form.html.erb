<% content_for :quote_form do %>
  <%= simple_form_for @quote, as: :quote, url: quotes_path do |f| %>
    <%= f.input :type, as: :hidden %>
    <%= f.input :first_name, label: false %>
    <%= f.input :last_name, label: false %>
    <%= f.input :street_address, label: false %>
    <%= f.input :street_address2, label: false %>
    <%= f.input :city, label: false %>
    <%= f.input :zipcode, label: false %>
    <%= f.input :phone, label: false %>
    <%= f.input :email, label: false %>

    <fieldset>
      <legend>Additional Information</legend>
      <%= f.input :date_of_birth, label: false %>
      <%= f.input :gender, label: false, as: :select, collection: gender_collection, prompt: t("simple_form.placeholders.defaults.gender") %>
      <%= f.input :health_self_employed, label: false, as: :select, collection: yes_no_collection, prompt: t("simple_form.placeholders.defaults.health_self_employed") %>
      <%= f.input :health_expected_annual_household_income, label: false %>
      <%= f.input :health_number_of_people_in_household, label: false %>

    </fieldset>

    <%= render "quotes/additional_info_and_final_inputs", f: f %>

    <%= f.button :submit, "Get Quote", class: "" %>
  <% end %>
<% end %>